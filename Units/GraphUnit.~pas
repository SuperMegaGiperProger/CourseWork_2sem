unit GraphUnit;

//----------------------------------------------------------------------------//

interface

uses
  listOfPointersUnit, EdgeUnit;

type
  TVertex = record
    latitude, longitude: real;
    edgesList: TListOfPointers;
  end;
  TVertexPt = ^TVertex;
  TGraphList = TListOfPointers;
  TWayVertex = record
    vPt: TVertexPt;

  end;

procedure createVertex(latitude, longitude: real; edgesList: TListOfPointers);
function bfs(start: TVertexPt; movingTypeSet: set of TMovingType): TListOfPointer;  // list of visited vertices
function

//----------------------------------------------------------------------------//

implementation

//----------------------------------------------------------------------------//

end.
