unit EdgeUnit;
 
//----------------------------------------------------------------------------//

interface

type
  TMovingType = (car, plane, foot);
  TRoadVertex = record
    latitude, longitude: real;
  end;
  TRoad = record
    movingType: TMovingType;
    weight: real;
    roadGraph: listOfPointers;  // list of TRoadVertex
  end;

//----------------------------------------------------------------------------//

implementation

//----------------------------------------------------------------------------//

end.
